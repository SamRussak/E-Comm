@model ECommerce.Models.Search

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <h1>E-Comm!</h1>
        <p class="lead">
            By creating an account with E-Comm you will be opening up a world of trading, shopping and financial opportunity.
        </p>
        <p style="text-align:center">@Html.ActionLink("Learn More!", "About", "Home") </p>
        <p style="text-align:center">@Html.ActionLink("Create an Account or Login", "Login", "Account") </p>

        <div class="form-horizontal">
            <br />
            <h4 style="text-align:center">Check Out Our Inventory</h4>            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div style="text-align:center">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", @style = "margin: 0px auto; width: 600px; " } })
                </div>
            </div>
            <div class="form-group" style="text-align:center">
                <div class="col-md-10">
                    <input id="button" type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>    
}